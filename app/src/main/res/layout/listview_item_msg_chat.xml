<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/bg_white2gray_selector"
    android:gravity="center_vertical"
    android:paddingLeft="16dp">

    <ImageView
        android:id="@+id/iv_chat_group_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:paddingLeft="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_chat_group_name"
                style="@style/tv_subhead_style" />

            <TextView
                android:id="@+id/tv_chat_content"
                style="@style/tv_other_style"
                android:layout_below="@id/tv_item_name"
                android:layout_marginTop="4dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:textColor="@color/text_gray" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_chat_group_time"
            style="@style/tv_other_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_color" />
    </RelativeLayout>


</LinearLayout>