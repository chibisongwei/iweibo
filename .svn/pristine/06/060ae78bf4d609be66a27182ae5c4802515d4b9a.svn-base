<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_album_bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@drawable/tabbar_background">

    <TextView
        android:id="@+id/photo_album_preview"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14.0dip"
        android:background="@drawable/compose_photo_preview_selector"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/preview"
        android:textSize="12.0sp" />

    <RelativeLayout
        android:id="@+id/photo_album_select_show_original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14.0dip"
        android:layout_toRightOf="@id/photo_album_preview">

        <TextView
            android:id="@+id/photo_album_select_show_original_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24.0dip"
            android:paddingRight="12.0dip"
            android:singleLine="true"
            android:text="@string/original"
            android:textSize="12.0sp" />
    </RelativeLayout>
</RelativeLayout>