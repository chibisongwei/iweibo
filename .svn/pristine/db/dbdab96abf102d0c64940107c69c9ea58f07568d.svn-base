<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/et_write_status"
                style="@style/tv_subhead_style"
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:gravity="top"
                android:hint="@string/hint_text"
                android:maxLength="140"
                android:minLines="3"
                android:textColorHint="@color/text_gray" />

            <com.willian.weibo.utils.MyGridView
                android:id="@+id/gv_write_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:horizontalSpacing="8dp"
                android:listSelector="@color/transparent"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="8dp">

            </com.willian.weibo.utils.MyGridView>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/bg_gray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_status_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/toolbar_picture_selector" />

        <ImageView
            android:id="@+id/iv_status_at"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/toolbar_at_selector" />

        <ImageView
            android:id="@+id/iv_status_topic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/toolbar_topic_selector" />

        <ImageView
            android:id="@+id/iv_status_emoji"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/toolbar_emoji_selector" />

        <ImageView
            android:id="@+id/iv_status_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/toolbar_add_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_emotion_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_emotion_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rg_emotion_dashboard"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_emotion_dashboard_recently"
                style="@style/RadioButtonEmotionDashboard"
                android:text="最近" />

            <RadioButton
                android:id="@+id/rb_emotion_dashboard_default"
                style="@style/RadioButtonEmotionDashboard"
                android:checked="true"
                android:text="默认" />

            <RadioButton
                android:id="@+id/rb_emotion_dashboard_emoji"
                style="@style/RadioButtonEmotionDashboard"
                android:text="Emoji" />

            <RadioButton
                android:id="@+id/rb_emotion_dashboard_xlh"
                style="@style/RadioButtonEmotionDashboard"
                android:text="浪小花" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>